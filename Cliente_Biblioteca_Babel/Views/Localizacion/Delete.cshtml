@model Cliente_Biblioteca_Babel.Models.LocalizacionModel

@{
    ViewBag.Title = "Delete";
    int idLocation = ViewBag.ID;
}

<section>
    <div class="container">
        <div style="height: 60px;"></div>
        <a href="/Localizacion" class="h2 text-dark"><i class="fas fa-arrow-circle-left"></i></a>
        <h2 class="text-center"> Eliminando Localización </h2>
        <p class="lead mt-3">¿Seguro que quiere eliminar esta localización?</p>

        <div class="row justify-content-center">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Estante)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Estante)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Sala)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sala)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Librero)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Librero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Posicion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Posicion)
                </dd>

            </dl>

            @using (Html.BeginForm("Delete", "Localizacion", FormMethod.Post, new { id = idLocation }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Eiminar" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</section>



